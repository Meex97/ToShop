<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="51dp" android:id="@+id/textView6" android:text="Product's details"
            android:gravity="center|left"/>
    <ImageView
            android:layout_width="311dp"
            android:layout_height="155dp" app:srcCompat="@drawable/missing_image"
            android:id="@+id/imageViewProductImage" android:layout_gravity="center"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" android:layout_weight="1"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textName" android:text="namename"
                android:textStyle="bold"
                android:gravity="center|left" android:textSize="24sp"/>
        <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" android:layout_weight="1"/>
        <TextView
                android:text="Quantity:    "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textQuantity"
                android:text="quantityquantity"
                android:textSize="18sp"
        />
    </LinearLayout>
    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textDescription" android:gravity="center"
            android:text="descriptiondescription"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <ImageView
                android:layout_width="58dp"
                android:layout_height="47dp" app:srcCompat="@drawable/add_to_cart"
                android:id="@+id/imageViewAddToCart" android:layout_gravity="center"
                android:background="@drawable/textview_rounded_corners"/>
        <TextView
                android:text="ADD TO CART"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:textColor="#03A9F4"
                android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
