<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView
                android:layout_width="16dp"
                android:layout_height="88dp" app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/productImage" android:layout_weight="1"/>
        <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="88dp" android:layout_weight="2">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/productName" android:layout_weight="1"
                    app:autoSizeTextType="none" android:textStyle="bold"
                    android:gravity="center|left" android:textSize="24sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/productPrice" android:layout_weight="1"
                    android:gravity="center|left" android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
